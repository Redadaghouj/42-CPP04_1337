# Color Definitions
RED     := \033[0;31m
GREEN   := \033[0;32m
YELLOW  := \033[0;33m
RESET   := \033[0m

CXX := c++

CXXFLAGS := -Wall -Wextra -Werror -std=c++98

RM := rm -rf

NAME := interface

VAL := valgrind --leak-check=full --track-origins=yes

SRC := main.cpp Materia.cpp

INC := AMateria.hpp MateriaSource.hpp Character.hpp IMateriaSource.hpp ICharacter.hpp Ice.hpp Cure.hpp

OBJ := $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@printf "$(GREEN)  Linking $(NAME)...$(RESET)\n"
	@$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME)
	@printf "$(GREEN)  Successfully built $(NAME)$(RESET)\n"

%.o: %.cpp $(INC)
	@printf "$(YELLOW)  Compiling $<...$(RESET)\n"
	@$(CXX) $(CXXFLAGS) -c $< -o $@

valgrind: $(NAME)
	@printf "$(GREEN)  Execute with VALGRIND$(RESET)\n"
	@$(VAL) ./$(NAME)

clean:
	@printf "$(RED)  Cleaning object files...$(RESET)\n"
	@$(RM) $(OBJ)
	@printf "$(GREEN)  Object files removed$(RESET)\n"

fclean: clean
	@printf "$(RED)  Removing executable...$(RESET)\n"
	@$(RM) $(NAME)
	@printf "$(GREEN)  Executable file removed$(RESET)\n"

re: fclean all
	@printf "$(YELLOW)  Rebuilding project...$(RESET)\n"

.PHONY: all clean fclean re
